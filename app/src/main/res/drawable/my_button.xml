<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#1A237E" android:endColor="@color/colorPrimaryDark" />
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

    <!-- disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <solid android:color="#808080"  />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#7986CB" android:endColor="@color/colorPrimary" />
        </shape>
    </item>
</selector>